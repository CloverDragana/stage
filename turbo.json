{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [".env"],
    "tasks": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**", ".next/**", "public/dist/**"]
      },
      "test": {
        "dependsOn": ["^build"]
      },
      "lint": {},
      "dev": {
        "cache": false,
        "persistent": true
      },
      "start": {
        "dependsOn": ["^build"]
      }
    }
  }